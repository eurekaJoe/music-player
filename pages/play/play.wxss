page {height:100%}
.container{
  height: 100%;
  overflow: hidden;
  margin: 0;
}
.bg{
  height: 100%;
  width: 100%;
}
.bg image{
  height: 100%;
  width: 100%;
  filter: blur(50rpx);
}
.bg-gray{
  position: absolute;
  top: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(54, 43, 41, 0.1);
}
.poster{
  width: 700rpx;
  height: 700rpx;
}
.content{
  width: 290px;
  height: 290px;
  background-size: 100% 100%;
  margin: 60px calc(50% - 145px);
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
}
#songUrl{
  width: 190px;
  height: 190px;
  border-radius: 95px;
}
#playBtn{
  position: absolute;
  width: 40px;
  height: 40px;
}
#disk{
  position: absolute;
  width: 290px;
  height: 290px;
}
#needle{
  width: 96px;
  height: 137px;
  position: fixed;
  right: 60px;
  top: 0;
}
.play{
  animation: turn 10s linear infinite;
  animation-play-state:running
}
.stop{
  animation: turn 10s linear infinite;
  animation-play-state:paused
}
@keyframes turn{
  from{
    transform: rotate(0);
  }
  to{
    transform: rotate(360deg);
  }
}
.info{
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  bottom: 100px;
  width: 100%;
  color: #fff;
}
.info_name{
  font-size: medium;
  margin-bottom: 5px;
}
.info_singer{
  font-size: smaller;
}
.slider-container{
  position: absolute;
  bottom: 140rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.slider-time{
  font-size: 32rpx;
  display: block;
  width: 19%;
  text-align: center;
  line-height: 18px;
  color: #fff;
}